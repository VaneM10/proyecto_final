generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Producto {
  id          Int      @id @default(autoincrement()) // Identificador Ãºnico
  nombre      String   
  descripcion String?  
  precio      Float    
  stock       Int     
  categoria   String   
  marca       String?  
  codigo      String   
  peso        Float?  
  color       String?  
}